{
    "compilerOptions": {
      "target": "ES2017",
      "module": "Node16",
      "rootDir": "src/",
      // "typeRoots": [
      //   "node_modules/@types"
      // ],
      // "types": ["dist/index.d.ts"],
      "outDir": "./dist",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "declaration": true
    },
    "include": [
      "src/*",
      "src/**/*"
    ]
  }